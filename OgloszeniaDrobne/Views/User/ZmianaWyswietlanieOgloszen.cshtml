
@{
    ViewBag.Title = "ZmianaWyswietlanieOgloszen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr/>
<h2>Zmiana ustawień</h2>
<hr/><br/><br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Liczba Ogłoszeń: </label>
            <div class="col-md-10">
                <input type="number" class="form-control" name="liczbaogloszen" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </div>
    </div>
}
